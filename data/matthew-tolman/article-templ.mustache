<!doctype html>
<html lang="en-US">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{title}}: {{blogTitle}}</title>

        {{{global_assets}}}
        {{{article_head_assets}}}
    </head>
    <body class="dys-full">
        <div class="body">
            <header>
                <a href="#main" class="a11y-sr-only">Skip to Content</a>
            </header>
            <nav>{{{navigation}}}</nav>
            <main id="main" class="post">
                <h1>{{title}}</h1>
                <div class="article-meta">
                  <img src="/{{author.profileImg}}" alt="Picture of {{author.name}}" />
                  <div>
                    <div class="author">Written by <a target="_blank" href="{{author.link}}">{{author.name}}</a></div>
                    Published: <time datetime="{{time}}" id="time-display">{{time}}</time>
                    <div class="reading-time">Estimated reading time: {{reading_time}}</div>
                  </div>
                </div>
                <script>if (window.Intl && window.Intl.DateTimeFormat) { document.getElementById('time-display').innerText = (new window.Intl.DateTimeFormat()).format(new Date('{{time}}')) }</script>
                <article>
                    {{{content}}}
                </article>
                <aside class="sidebar">{{{tagTitle}}}{{#tags}}<a><div class="tag">{{.}}</div></a>{{/tags}}</aside>
            </main>
            <a class="to-top-real" href="#__top">To Top</a>
            <footer>
                <div>
                    <div id="privacy-policy">{{privacyStatement}}</div>
                    <div>&copy; {{copyright}}</div>
                </div>
            </footer>
        </div>
        {{{article_body_assets}}}

    <script>
        window.addEventListener('scroll', function() {
            if (document.scrollingElement.scrollTop > 300) {
                document.querySelector('.to-top-real').classList.add('show')
            }
            else {
                document.querySelector('.to-top-real').classList.remove('show')
            }
        })
    </script>
    </body>
</html>
